			"@hmi-app/hmi": ["projects/hmi-app/src/app/hmi"],
			"@hmi-app/auth": ["projects/hmi-app/src/app/auth"],
			"@hmi-app/global": ["projects/hmi-app/src/app/global"],
			"@hmi-app/app-store": ["projects/hmi-app/src/app/store"],
			"@data-collector/*": ["projects/data-collector/*"],

